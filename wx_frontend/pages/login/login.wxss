
.tab{
  display:flex;
  background:#FD8238;
  justify-content:space-around;
  color:#fff;
  font-size:26rpx;
  line-height:70rpx;
  height:70rpx;
}
.tab-item{
  position: relative;
}
.tab-item::after{
  position: absolute;
  content: '';
  left: 0;
  bottom: 4rpx;
  width: 100%;
  height: 5rpx;
  background: #fff;
}
.accLogin{
  padding:180rpx 0;
}
.accLogin-top{
  display: flex;
  justify-content: space-around;
}
.top-left{
  display:flex;
  flex-direction:column;
  align-items:center;
  line-height:70rpx;
  background:#fff;
}
.top-left::after{
  position: absolute;
  content: '';
  width: 0rpx;
  height: 0rpx;
}
.left-icon{
  position: relative;
  width:120rpx;
  height:120rpx;
  border-radius:50%;
  border:1px solid #FD8238;
  text-align:center;
  line-height:120rpx;
}
.left-icon::after{
  position: absolute;
  content: '';
  width: 5rpx;
  height: 130rpx;
  top: 20rpx;
  right: -80rpx;
  background: rgb(242,242,242);
}
.top-right{
  display:flex;
  flex-direction:column;
  align-items:center;
  line-height:70rpx;
  background:#fff;
}
.top-right::after{
  position: absolute;
  content: '';
  width: 0rpx;
  height: 0rpx;
}
.right-icon{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
  border:1px solid #FD8238;
  text-align:center;
  line-height:120rpx;
}
.accLogin-icon{
  font-size: 60rpx;
}
.accLogin-bottom{
  margin-top: 20rpx;
  text-align: center;
}
.codeLogin{
  padding:200rpx 70rpx;
}
.codeLogin-view{
  height: 65rpx;
  margin-bottom: 50rpx;
  border-bottom: 1px solid rgb(193,193,193);
}
.codeLogin-code{
  display: flex;
  justify-content: space-between;
}
.code-button{
  width: 187rpx;
}
.codeLogin-view image{
  width: 100%;
  height: 100%;
}
.btn-login{
  background:#fd8238;
  text-align:center;
  margin-top:150rpx;
  height:90rpx;
  line-height:90rpx;
  border-radius:50rpx;
  margin-bottom:20rpx;
  color: rgba(255, 255, 255, 0.651);
}
.btn-click{
  background: rgb(255, 185, 142);
}
.codeLogin-code-image{
  width: 200rpx;
  margin-top: -10rpx;
  height: 60rpx;
}