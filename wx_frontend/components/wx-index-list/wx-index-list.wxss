.list-warpper {
  position: relative;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.list-scroll {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

/* 样式控制  */

.list-title {
  padding: 10rpx;
  padding-left: 30rpx;
  padding-top: 15rpx;
  font-size: 24rpx
}

.list-name {
  position: relative;
  padding: 15rpx;
  padding-left: 30rpx;
}

.list-name.border::after {
  content: "";
  position: absolute;
  left: 30rpx;
  right: 0;
  top: 0;
  height: 1px;
}

.list-right-wrapper {
  display: flex;
  flex-wrap: wrap;
}

.right-item {
  width: 90rpx;
  font-size: 24rpx;
  text-align: center;
  margin: 10rpx;
}

.list-search {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  z-index: 20;
  background: #FFF;
}

.search-title {
  flex-shrink: 0;
  padding-right: 10rpx;
}

.list-search-box {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  width: 100%;
  height: 70rpx;
  border-radius: 90rpx;
  box-sizing: border-box;
}

.list-search-box input {
  width: 100%;
  padding-left: 10rpx;
}

.search-button {
  /* width: 100rpx; */
  flex-shrink: 0;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 10rpx;
}

/* 热门城市横排显示样式  */

.list-horizontal {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
  font-size: 24rpx;
}

.list-horizontal .list-name {
  padding: 5rpx 0;
  border: 1px #ccc solid;
  border-radius: 10rpx;
  margin: 10rpx;
  width: 160rpx;
  text-align: center;
}


/* 无数据  */
.nodata {
  padding-top: 200rpx;
  text-align: center;
}